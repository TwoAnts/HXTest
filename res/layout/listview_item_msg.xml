<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <ImageView 
        android:id="@+id/image_head"
        android:src="@drawable/zhou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
    <TextView 
        android:id="@+id/nick_name"
        android:text="nick_name"
        android:textSize="25sp"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_head"
        android:layout_toRightOf="@id/image_head" />
    <TextView 
        android:id="@+id/msg_time"
        android:text="msg_time"
        android:textSize="15sp"
        android:layout_marginTop="6dip"
        android:layout_alignTop="@id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <TextView 
        android:id="@+id/msg_content"
        android:text="呵呵，我是周周周！呵呵呵呵呵呵！"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_margin="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_head"
        android:layout_alignBottom="@id/image_head" />

</RelativeLayout>
